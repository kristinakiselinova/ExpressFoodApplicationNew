@using Microsoft.AspNetCore.Identity
@using ExpressFood.Domain.Identity
@inject SignInManager<ExpressFood.Domain.Identity.Customer> SignInManager
@inject UserManager<ExpressFood.Domain.Identity.Customer> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
