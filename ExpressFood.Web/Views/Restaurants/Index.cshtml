@model IEnumerable<ExpressFood.Domain.Domain.Restaurant>

@{
    ViewData["Title"] = "Restaurants";
}

<h1 class="text-center mb-4" style="font-weight: 600; color: #333;">Restaurants</h1>

<p class="text-center mb-4">
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create" class="btn btn-dark px-4 py-2 rounded-pill shadow-sm">Add New Restaurant</a>
    }
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <img src="@item.RestaurantImage" class="card-img-top rounded-top" alt="Restaurant Image"
                         style="height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column" style="background-color: #f8f9fa;">
                        <h5 class="card-title mb-2" style="color: #2c3e50; font-weight: 600;">@item.Name</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">
                            <strong>Address:</strong> @item.Address <br />
                            <strong>Contact:</strong> @item.ContactNumber <br />
                            <strong>Hours:</strong> @item.OpeningHours
                        </p>
                        <div class="mt-auto">
                            <span class="badge bg-secondary" style="font-size: 0.85rem;">⭐ Rating: @item.Rating</span>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-0 text-center">
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm rounded-pill px-3">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill px-3">Delete</a>
                        }
                     
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm rounded-pill px-3">Details</a>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>

