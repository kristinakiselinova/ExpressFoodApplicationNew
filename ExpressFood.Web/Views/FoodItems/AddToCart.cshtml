@model ExpressFood.Domain.Domain.FoodItemInOrder

<h1 class="text-center mb-4" style="font-weight: 600; color: #333;">Add to Order</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddToCartConfirmed" class="p-4 bg-light rounded-3 shadow-sm">
                <input type="hidden" asp-for="FoodItemId" />
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-info rounded-pill px-4">Add to Cart</button>
                </div>
            </form>
        </div>
    </div>
</div>
