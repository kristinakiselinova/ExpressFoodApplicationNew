@model ExpressFood.Domain.Domain.FoodItem

@{
    ViewData["Title"] = "Delete Food Item";
}

<h1 class="text-center mb-4" style="font-weight: 600; color: #dc3545;">Delete Food Item</h1>

<div class="container">
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body" style="background-color: #f8f9fa;">
            <h4 class="mb-4 text-center">Are you sure you want to delete this food item?</h4>

            <div class="text-muted mb-3">
                <strong>Name:</strong> @Model.Name <br />
                <strong>Description:</strong> @Model.Description <br />
                <strong>Price:</strong> @Model.Price <br />
                <strong>Food Item Image:</strong> <br />
                <img src="@Model.FoodItemImage" style="width: 150px; height: 150px; object-fit: cover;" /><br />
                <strong>Restaurant:</strong> @Model.Restaurant.Name
            </div>

            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">Delete</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

